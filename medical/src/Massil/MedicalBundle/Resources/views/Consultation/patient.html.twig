<div class="col-md-12">
	<form class="form-horizontal" role="form">
		<div class="form-group">
			<label class="col-md-6 control-label"> Nom </label>
			<div class="col-md-6">
				<p class="form-control-static">
					{{ patient.nom|capitalize }}
				</p>
			</div>
		</div>
		<div class="form-group">
			<label class="col-md-6 control-label"> Pr&eacute;nom </label>
			<div class="col-md-6">
				<p class="form-control-static">
					{{ patient.prenom|capitalize }}
				</p>
			</div>
		</div>
		<div class="form-group">
			<label class="col-md-6 control-label"> Date de naissance </label>
			<div class="col-md-6">
				<p class="form-control-static">
					{{ patient.dateNaissance|date('d/m/Y') }}
				</p>
			</div>
		</div>
		<div class="form-group">
			<label class="col-md-6 control-label"> Sexe </label>
			<div class="col-md-6">
				<p class="form-control-static">
					{{ patient.sexe|capitalize }}
				</p>
			</div>
		</div>
		<div class="form-group">
			<label class="col-md-6 control-label"> Situation familiale </label>
			<div class="col-md-6">
				<p class="form-control-static">
					{{ patient.etatCivil|capitalize }}
				</p>
			</div>
		</div>		
		<div class="form-group">
			<label class="col-md-6 control-label"> Assurance </label>
			<div class="col-md-6">
				<p class="form-control-static">
					{% if patient.assure is null %}
						Non mention&eacute;e
					{% else %}
						{% if patient.assure == 0 %}
							Non
						{% else %}
							Oui
						{% endif %}
					{% endif %}
				</p>
			</div>
		</div>		
	</form>
</div>
<div class="col-md-2">
</div>
<br>
<div class="col-md-9">
	<div class="btn-group">
		<a href="{{ path('medical_patient_edit',{'id':patient.id}) }}" class="btn btn-primary">
			<i class="glyphicon glyphicon-edit"></i>
				Modifier ce patient
		</a>
		<a href="{{ path('medical_patient_delete',{'id':patient.id}) }}" class="btn btn-danger">
			<i class="glyphicon glyphicon-trash"></i>
				Supprimer ce patient
		</a>
	</div>
</div>
